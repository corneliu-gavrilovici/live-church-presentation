<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="LiveBiblePresentation.FrmSplash"
	x:Name="Window"
	Title="FrmSplash"
	Width="300" Height="50" Background="{x:Null}" Foreground="{x:Null}" AllowsTransparency="True" ShowInTaskbar="False" SizeToContent="Manual" WindowStartupLocation="CenterScreen" WindowStyle="None">

	<Border x:Name="border" OpacityMask="#FF00FFFF">
		<Border.Background>
			<LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
				<GradientStop Color="#FF0B5300" Offset="0"/>
			</LinearGradientBrush>
		</Border.Background>
		<TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#FFFFFFFF" Text="Loading..." TextWrapping="Wrap"/>
	</Border>
</Window>